@page
@using Flockbuster.Domain.Models;
@model Flockbuster.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin - Dashboard";
}

<div class="container d-flex justify-content-between">
	<div class="card h-100 col-sm-3 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<h5 class="mb-2">Shortcuts</h5>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/admin/Users">Site users </a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/admin/Movies">Mange movies </a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/admin/MovieHistory">Borrowed movies </a>
			</div>
		</div>
	</div>
	<div class="card h-100 w-50 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body">
			<div class="row gutters">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<h5 class="mb-4">Site information</h5>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Users:</h6>
					@Model.ListOfUsers.Count()
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Movies:</h6>
					@Model.ListOfMovies.Count()
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Borrowed Movies:</h6>
					@Model.ListOfBorrowedMovies.Count()
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Genres:</h6>
					@Model.ListOfGenres.Count()
				</div>
			</div>
		</div>
	</div>
</div>

