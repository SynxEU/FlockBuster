@page
@using Flockbuster.Domain.Models;
@model Flockbuster.Pages.Admin.Create.MovieModel
@{
    ViewData["Title"] = "Create - Movie";
}

<div class="container">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Movie Details</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="titleInput">Title</label>
                                    <input type="Text"
                                           class="form-control"
                                           id="titleInput"
                                           placeholder="Title"
                                           asp-for="Title">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="AgeRatingInput">Age Rating</label>
                                    <input type="number"
                                           class="form-control"
                                           id="AgeRatingInput"
                                           placeholder="Age rating"
                                           asp-for="AgeRating">
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Time to watch</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="hoursInput">Hours</label>
                                    <input type="number"
                                           class="form-control"
                                           id="hoursInput"
                                           placeholder="Hours"
                                           asp-for="Hours">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="minutesInput">Minutes</label>
                                    <input type="number"
                                           class="form-control"
                                           id="minutesInput"
                                           placeholder="Minutes"
                                           asp-for="Miuntes">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Other information</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="releaseDateInput">Release date</label>
                                    <input type="date"
                                           class="form-control"
                                           id="releaseDateInput"
                                           placeholder="Release date"
                                           asp-for="ReleaseDate">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="priceInput">Price</label>
                                    <input type="number"
                                           class="form-control"
                                           id="priceInput"
                                           placeholder="Price"
                                           asp-for="Price">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Genre and genre list</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="genreInput">Genre id</label>
                                    <input type="number"
                                           class="form-control"
                                           id="genreInput"
                                           placeholder="Genre id"
                                           asp-for="GenreId">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="dropdown">
                                    <a class="dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Genres
                                    </a>
                                    <ul class="dropdown-menu" data-bs-auto-close="false">
                                        @foreach (Genre genre in Model.Genres)
                                        {
                                            <li><a class="dropdown-item">@genre.Id - @genre.GenreName</a></li>
                                        }
                                    </ul>
                                </div>
                            </div> 
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Admin password and image</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="adminPasswordInput"
                                           placeholder="Password"
                                           asp-for="AdminPassword">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Img" class="control-label"></label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3" asp-page-handler="Create">
                            Create
                        </button>
                        <button type="submit" class="btn btn-secondary mt-3" asp-page-handler="Cancel">
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

