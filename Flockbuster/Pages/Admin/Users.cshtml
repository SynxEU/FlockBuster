@page
@using Flockbuster.Domain.Models;
@model Flockbuster.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Admin - Users";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Age</th>
                <th scope="col">Balance</th>
                <th scope="col">Admin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Users user in Model.ListOfUsers)
            {
                <tr>
                    <th scope="row">@(user.Id - 1)</th>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                    <td>@user.Balance</td>
                    <td>@user.IsAdmin</td>
                    <td class="d-flex justify-content-end">
                        <form method="post">
                            <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Edit" asp-route-userId="@user.Id"><i class="fa-solid fa-pen"></i></button>
                        </form>
                        <button class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#userDeleteModal-@user.Id"><i class="fa-solid fa-trash-can"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (Users user in Model.ListOfUsers)
{
    <div class="modal fade" id="userDeleteModal-@user.Id" tabindex="-1" aria-labelledby="userDeleteModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-danger" id="userDeleteModal-@user.Id">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        Name: @user.Name
                    </div>
                    <div class="mb-3">
                        Email: @user.Email
                    </div>
                    <div class="mb-3">
                        Age: @user.Age
                    </div>
                    <div class="mb-3">
                        Balance: @user.Balance
                    </div>
                    <div class="mb-3">
                        Admin: @{
                            if (user.IsAdmin)
                            {
                                <p>Is admin</p>
                            }
                            else
                            {
                                <p>Not admin</p>
                            }
                        }
                    </div>
                    <div class="mb-3">
                        Are you sure you want to delete this user?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">No</button>
                    <form method="post">
                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal" asp-page-handler="Delete" asp-route-userId="@user.Id">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}