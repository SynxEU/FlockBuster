@page
@using Flockbuster.Domain.Models;
@model Flockbuster.Pages.Admin.MoviesModel
@{
    ViewData["Title"] = "Admin - Movies";
}

<div class="container d-flex justify-content-end">
    <form method="post" class="d-flex">
        <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Create"><i class="fa-solid fa-film">  Create</i></button>
    </form>
</div>
<div class="mt-2 container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Age Rating</th>
                <th scope="col">Time To Watch</th>
                <th scope="col">Release date</th>
                <th scope="col">Price</th>
                <th scope="col">Genres</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Movies mov in Model.ListOfMovies)
            {
                <tr>
                    <th scope="row">@mov.Id</th>
                    <td>@mov.Title</td>
                    <td>@mov.RequiredAge</td>
                    <td>@mov.TTW</td>
                    <td>@mov.RelaseDate</td>
                    <td>@mov.Price</td>
                    <td class="dropdown">
                        <a class="dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Genres
                        </a>
                        <ul class="dropdown-menu" data-bs-auto-close="false">
                            @foreach (Genre genre in mov.Genres)
                            {
                                <li><a class="dropdown-item">@genre.GenreName</a></li>
                            }
                        </ul>
                    </td>
                    <td class="d-flex justify-content-end">
                        <form method="post">
                            <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Edit" asp-route-movieId="@mov.Id"><i class="fa-solid fa-pen"></i></button>
                        </form>
                        <button class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#movDeleteModal-@mov.Id"><i class="fa-solid fa-trash-can"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (Movies mov in Model.ListOfMovies)
{
    <div class="modal fade" id="movDeleteModal-@mov.Id" tabindex="-1" aria-labelledby="movDeleteModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-danger" id="movDeleteModal-@mov.Id">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        Title of Movie: @mov.Title
                    </div>
                    <div class="mb-3">
                        Age Rating: @mov.RequiredAge
                    </div>
                    <div class="mb-3">
                        Time To Watch: @mov.TTW
                    </div>
                    <div class="mb-3">
                        Release Date: @mov.RelaseDate
                    </div>
                    <div class="mb-3">
                        Price: @mov.Price
                    </div>
                    <div class="mt-3">
                        Are you sure you want to delete this movie?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">No</button>
                    <form method="post">
                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal" asp-page-handler="Delete" asp-route-movieId="@mov.Id">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}