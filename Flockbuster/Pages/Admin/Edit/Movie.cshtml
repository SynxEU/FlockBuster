@page
@model Flockbuster.Pages.Admin.Edit.MovieModel
@{
    ViewData["Title"] = "Edit - Movie";
}
<div class="container">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Movie Details</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="titleInput">Title</label>
                                    <input type="Text"
                                           class="form-control"
                                           id="titleInput"
                                           value="@Model.Movie.Title"
                                           asp-for="Title">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="AgeRatingInput">Age Rating</label>
                                    <input type="number"
                                           class="form-control"
                                           id="AgeRatingInput"
                                           value="@Model.Movie.RequiredAge"
                                           asp-for="AgeRating">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="releaseDateInput">Release date</label>
                                    <input type="date"
                                           class="form-control"
                                           id="releaseDateInput"
                                           asp-for="ReleaseDate">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="priceInput">Price</label>
                                    <input type="number"
                                           class="form-control"
                                           id="priceInput"
                                           value="@Model.Movie.Price"
                                           asp-for="Price">
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Time to watch</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="hoursInput">Hours</label>
                                    <input type="number"
                                           class="form-control"
                                           id="hoursInput"
                                           value="@(Model.Movie.TTW / 3600)"
                                           asp-for="Hours">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="minutesInput">Minutes</label>
                                    <input type="number"
                                           class="form-control"
                                           id="minutesInput"
                                           value="@((Model.Movie.TTW / 60) - (Model.Movie.TTW / 3600 * 60))"
                                           asp-for="Miuntes">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Admin password and image</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="adminPasswordInput"
                                           placeholder="Password"
                                           asp-for="AdminPassword">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Img" class="control-label"></label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3" asp-page-handler="Update">
                            Update
                        </button>
                        <button type="submit" class="btn btn-secondary mt-3" asp-page-handler="Cancel">
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

