@page
@model Flockbuster.Pages.ContactModel
@{
    ViewData["Title"] = "Contact page";
}

<div class="d-flex justify-content-around">
    <div class="card h-100 col-sm-3 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body d-flex justify-content-center">
            <img class="h-50 col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5 rounded-circle" src="/pics/flockbuster.png" />
		</div>
        <div class="container text-center mt-4">
            <p>
                Email: sanitiw514@gmail.com
                Telefon: +45 99 19 93 64
            </p>
        </div>
	</div>
    <div class="card h-100 col-md-6 col-sm-6 col-6 w-50 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mb-3 text-primary">Contact us</h6>
            </div>
            <form method="post">
                <div class="form-group">
                    <input type="Text"
                        class="form-control mb-4"
                        id="fullNameInput"
                        placeholder="Full name"
                        asp-for="FullName">
                </div>
                <div class="form-group">
                    <input type="Text"
                        class="form-control mb-4"
                        id="emailInput"
                        placeholder="Email"
                        asp-for="Email">
                </div>
                <div class="form-group">
                    <input type="text"
                        class="form-control mb-4"
                        id="subjectInput"
                        placeholder="Subject"
                        asp-for="Subject">
                </div>
                <div class="form-group">
                    <textarea data-val="true"
                        data-val-maxlength-max="500"
                        id="Textarea"
                        class="form-control mb-4"
                        rows="6" 
                        placeholder="Write something" 
                        asp-for="Textarea">
                    </textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary mt-3 w-100" asp-page-handler="Contact">
                    Contact
                </button>
            </form>
		</div>
	</div>
</div>
