<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Flockbuster.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler border" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel" href="/index">Flockbuster</h5>
                        <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active text-dark" href="/index">Home</a>
                            </li>
                            <li>
                                <a class="nav-link active text-dark" href="/movies">Movies</a>
                            </li>
                            @if (Context.Session.GetString("Name") == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="/Signin">Sign in</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>Hello </span>@Context.Session.GetString("Name")
                                    </a>
                                    <ul class="dropdown-menu" data-bs-auto-close="false">
                                        @if (!Context.Session.GetBoolean("Admin"))
                                        {
                                            <li><a class="dropdown-item" href="/user/dashboard">Dashboard</a></li>
                                            <li><a class="dropdown-item" href="/user/moviehistory">Movie history</a></li>
                                            <li><a class="dropdown-item" href="/user/settings">Settings</a></li>
                                        }
                                        else
                                        {
                                            <li><a class="dropdown-item" href="/Admin/Dashboard">Site Dashboard</a></li>
                                            <li><a class="dropdown-item" href="/Admin/Users">Site Users</a></li>
                                            <li><a class="dropdown-item" href="/Admin/Movies">Mange Site Movies</a></li>
                                            <li><a class="dropdown-item" href="/Admin/MovieHistory">Borrowed Movie history</a></li>
                                        }
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/Signout">Logout</a>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Flockbuster - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>