@page
@model Flockbuster.Pages.User.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="container">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Personal Details</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="firstNameInput">First name</label>
                                    <input type="Text"
                                           class="form-control"
                                           id="firstNameInput"
                                           value="@Model.UserFirstName"
                                           asp-for="FirstName">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="lastNameInput">Last name</label>
                                    <input type="Text"
                                           class="form-control"
                                           id="lastNameInput"
                                           value="@Model.UserLastName"
                                           asp-for="LastName">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="emailAddressInput">Email address</label>
                                    <input type="email"
                                           class="form-control"
                                           id="emailAddressInput"
                                           value="@Model.User.Email"
                                           asp-for="EmailAddress">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="ageInput">Age</label>
                                    <input type="number"
                                           class="form-control"
                                           id="ageInput"
                                           value="@Model.User.Age"
                                           asp-for="Age">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">New Password</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="passwordInput"
                                           placeholder="Password"
                                           asp-for="Password">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="confirmPasswordInput">Confirm password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="confirmPasswordInput"
                                           placeholder="Confirm password"
                                           asp-for="ConfirmPassword">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Current password</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="currentPasswordInput"
                                           placeholder="Password"
                                           asp-for="CurrentPassword">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Img" class="control-label"></label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3" asp-page-handler="Update">
                            Update
                        </button>
                        <button type="submit" class="btn btn-secondary mt-3" asp-page-handler="Cancel">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger mt-3" asp-page-handler="Delete">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>