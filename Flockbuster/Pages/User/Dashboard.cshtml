@page
@model Flockbuster.Pages.User.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}
<div class="container d-flex justify-content-between">
	<div class="card h-100 col-sm-3 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<h5 class="mb-2">Shortcuts</h5>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/index">Front page</a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
			<a href="~/Movies">Movies </a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/User/MovieHistory">Movie history</a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/User/Settings">Settings</a>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<a href="~/signout">Logout</a>
			</div>
		</div>
	</div>
	<div class="card h-100 w-50 shadow p-3 mb-5 bg-body-tertiary rounded">
		<div class="card-body">
			<div class="row gutters">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<h5 class="mb-4">User Details</h5>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">User number:</h6>
					0
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Name:</h6>
					0
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">E-mail:</h6>
					0
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<h6 class="mt-3">Balance:</h6>
					0
				</div>
			</div>
		</div>
	</div>
</div>
